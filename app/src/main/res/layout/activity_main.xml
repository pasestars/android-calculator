<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_view_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:text=""
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="bottom|right"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:text="0"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textColor="#000"
        android:textSize="70sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_ce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="CE"
            android:textSize="40sp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="40sp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_bs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="BS"
            android:textSize="40sp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="40sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_sev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:backgroundTint="#eee"
            android:textSize="40sp"

            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_eig"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="40sp"
            android:backgroundTint="#eee"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_nin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#eee"
            android:text="9"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="40sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_fou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="40sp"
            android:backgroundTint="#eee"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_fiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="40sp"
            android:backgroundTint="#eee"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="40sp"
            android:backgroundTint="#eee"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="40sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="40sp"
            android:backgroundTint="#eee"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="40sp"
            android:backgroundTint="#eee"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_thr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="40sp"
            android:backgroundTint="#eee"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="40sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_rev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+/-"
            android:textSize="40sp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_rez"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="40sp"
            android:backgroundTint="#eee"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="40sp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btn_squ"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="40sp"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>